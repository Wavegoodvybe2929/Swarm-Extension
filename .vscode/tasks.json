{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "npm",
            "args": ["run", "watch"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "npm",
            "args": ["run", "compile"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$tsc",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": ["run", "test"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$tsc",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "npm",
            "args": ["run", "lint"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$eslint-stylish",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
