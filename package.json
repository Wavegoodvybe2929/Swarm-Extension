{
  "name": "ruv-swarm-vscode",
  "displayName": "RUV-Swarm AI Assistant",
  "description": "Offline AI development assistance with neural swarm intelligence",
  "version": "0.1.0",
  "publisher": "ruv-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Debuggers",
    "Testing"
  ],
  "keywords": [
    "ai",
    "neural-network",
    "swarm",
    "code-analysis",
    "machine-learning",
    "offline",
    "ruv-swarm"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ruv-swarm.initializeSwarm",
        "title": "Initialize AI Swarm",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.spawnCodingAgent",
        "title": "Spawn Coding Agent",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.analyzeCurrentFile",
        "title": "Analyze Current File",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.generateTests",
        "title": "Generate Tests",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.codeReview",
        "title": "Code Review",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.optimizePerformance",
        "title": "Optimize Performance",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.securityAnalysis",
        "title": "Security Analysis",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.explainCode",
        "title": "Explain Code",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.refactorCode",
        "title": "Refactor Code",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.monitorSwarm",
        "title": "Monitor Swarm",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.benchmarkPerformance",
        "title": "Benchmark Performance",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.openDashboard",
        "title": "Open Dashboard",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.validateCLI",
        "title": "Validate CLI Environment",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.clearCache",
        "title": "Clear Cache",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.showErrorReports",
        "title": "Show Error Reports",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.batchAnalyzeWorkspace",
        "title": "Batch Analyze Workspace",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.batchGenerateTests",
        "title": "Batch Generate Tests",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.showCommandQueue",
        "title": "Show Command Queue",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.pauseQueue",
        "title": "Pause Command Queue",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.resumeQueue",
        "title": "Resume Command Queue",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.clearQueue",
        "title": "Clear Command Queue",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.startMcpServer",
        "title": "Start MCP Server",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.connectMcpServer",
        "title": "Connect MCP Server",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.mcpServerStatus",
        "title": "MCP Server Status",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.mcpToolsList",
        "title": "List MCP Tools",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.mcpResourcesList",
        "title": "List MCP Resources",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.connectLMStudio",
        "title": "Connect to LM Studio",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.disconnectLMStudio",
        "title": "Disconnect from LM Studio",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.configureLMModel",
        "title": "Configure LM Studio Model",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.startAISession",
        "title": "Start AI Coding Session",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.aiAnalyzeProject",
        "title": "AI Project Analysis",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.aiCodeReview",
        "title": "AI Code Review",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.showWorkflowHistory",
        "title": "Show Workflow History",
        "category": "RUV-Swarm"
      },
      {
        "command": "ruv-swarm.openLMStudioChat",
        "title": "Open LM Studio Chat",
        "category": "RUV-Swarm"
      }
    ],
    "keybindings": [
      {
        "command": "ruv-swarm.initializeSwarm",
        "key": "ctrl+shift+a i",
        "when": "!terminalFocus"
      },
      {
        "command": "ruv-swarm.spawnCodingAgent",
        "key": "ctrl+shift+a c",
        "when": "!terminalFocus"
      },
      {
        "command": "ruv-swarm.analyzeCurrentFile",
        "key": "ctrl+shift+a r",
        "when": "editorTextFocus"
      },
      {
        "command": "ruv-swarm.generateTests",
        "key": "ctrl+shift+a t",
        "when": "editorTextFocus"
      },
      {
        "command": "ruv-swarm.codeReview",
        "key": "ctrl+shift+a v",
        "when": "!terminalFocus"
      },
      {
        "command": "ruv-swarm.optimizePerformance",
        "key": "ctrl+shift+a o",
        "when": "editorTextFocus"
      },
      {
        "command": "ruv-swarm.securityAnalysis",
        "key": "ctrl+shift+a s",
        "when": "editorTextFocus"
      },
      {
        "command": "ruv-swarm.explainCode",
        "key": "ctrl+shift+a e",
        "when": "editorTextFocus"
      },
      {
        "command": "ruv-swarm.refactorCode",
        "key": "ctrl+shift+a f",
        "when": "editorTextFocus"
      },
      {
        "command": "ruv-swarm.monitorSwarm",
        "key": "ctrl+shift+a m",
        "when": "!terminalFocus"
      },
      {
        "command": "ruv-swarm.benchmarkPerformance",
        "key": "ctrl+shift+a b",
        "when": "!terminalFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ruv-swarm.analyzeCurrentFile",
          "group": "ruv-swarm@1",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "ruv-swarm.generateTests",
          "group": "ruv-swarm@2",
          "when": "editorTextFocus"
        },
        {
          "command": "ruv-swarm.explainCode",
          "group": "ruv-swarm@3",
          "when": "editorHasSelection"
        },
        {
          "command": "ruv-swarm.refactorCode",
          "group": "ruv-swarm@4",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "ruv-swarm.codeReview",
          "group": "ruv-swarm@1",
          "when": "resourceExtname =~ /\\.(js|ts|jsx|tsx|py|rs|go|java|cs|php|rb|cpp|c|h)$/"
        }
      ],
      "commandPalette": [
        {
          "command": "ruv-swarm.initializeSwarm",
          "when": "true"
        },
        {
          "command": "ruv-swarm.openDashboard",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "RUV-Swarm",
      "properties": {
        "ruv-swarm.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable RUV-Swarm AI assistance"
        },
        "ruv-swarm.autoInitialize": {
          "type": "boolean",
          "default": true,
          "description": "Automatically initialize swarm on workspace open"
        },
        "ruv-swarm.defaultTopology": {
          "type": "string",
          "enum": [
            "hierarchical",
            "mesh",
            "ring",
            "star"
          ],
          "default": "hierarchical",
          "description": "Default swarm topology"
        },
        "ruv-swarm.maxAgents": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 32,
          "description": "Maximum number of agents in swarm"
        },
        "ruv-swarm.cognitivePatterns": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "convergent",
              "divergent",
              "systems",
              "critical",
              "lateral",
              "abstract",
              "hybrid"
            ]
          },
          "default": [
            "convergent",
            "divergent",
            "systems",
            "critical"
          ],
          "description": "Enabled cognitive patterns"
        },
        "ruv-swarm.autoAnalyze": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "onSave": {
              "type": "boolean",
              "default": true
            },
            "onOpen": {
              "type": "boolean",
              "default": false
            },
            "debounceMs": {
              "type": "number",
              "default": 2000
            }
          },
          "default": {
            "enabled": true,
            "onSave": true,
            "onOpen": false,
            "debounceMs": 2000
          },
          "description": "Auto-analysis settings"
        },
        "ruv-swarm.fileWatcher": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "patterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "**/*.js",
                "**/*.ts",
                "**/*.jsx",
                "**/*.tsx",
                "**/*.py",
                "**/*.rs",
                "**/*.go",
                "**/*.java",
                "**/*.cs"
              ]
            },
            "exclude": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "**/node_modules/**",
                "**/target/**",
                "**/build/**",
                "**/dist/**"
              ]
            }
          },
          "default": {
            "enabled": true,
            "patterns": [
              "**/*.js",
              "**/*.ts",
              "**/*.jsx",
              "**/*.tsx",
              "**/*.py",
              "**/*.rs",
              "**/*.go",
              "**/*.java",
              "**/*.cs"
            ],
            "exclude": [
              "**/node_modules/**",
              "**/target/**",
              "**/build/**",
              "**/dist/**"
            ]
          },
          "description": "File watcher configuration"
        },
        "ruv-swarm.terminal": {
          "type": "object",
          "properties": {
            "showOutput": {
              "type": "boolean",
              "default": true
            },
            "clearOnRun": {
              "type": "boolean",
              "default": false
            },
            "focusOnRun": {
              "type": "boolean",
              "default": true
            }
          },
          "default": {
            "showOutput": true,
            "clearOnRun": false,
            "focusOnRun": true
          },
          "description": "Terminal output settings"
        },
        "ruv-swarm.mcp": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "autoConnect": {
              "type": "boolean",
              "default": true
            },
            "servers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "transport": {
                    "type": "object"
                  },
                  "autoStart": {
                    "type": "boolean"
                  },
                  "enabled": {
                    "type": "boolean"
                  },
                  "priority": {
                    "type": "number"
                  }
                }
              },
              "default": []
            },
            "defaultTimeout": {
              "type": "number",
              "default": 30000
            },
            "retryAttempts": {
              "type": "number",
              "default": 3
            },
            "retryDelay": {
              "type": "number",
              "default": 1000
            }
          },
          "default": {
            "enabled": true,
            "autoConnect": true,
            "servers": [],
            "defaultTimeout": 30000,
            "retryAttempts": 3,
            "retryDelay": 1000
          },
          "description": "MCP (Model Context Protocol) integration settings"
        },
        "ruv-swarm.lmstudio": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable LM Studio integration"
            },
            "connection": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string",
                  "default": "localhost",
                  "description": "LM Studio server host"
                },
                "port": {
                  "type": "number",
                  "default": 1234,
                  "description": "LM Studio server port"
                },
                "apiKey": {
                  "type": "string",
                  "default": "",
                  "description": "API key for LM Studio (if required)"
                },
                "timeout": {
                  "type": "number",
                  "default": 30000,
                  "description": "Connection timeout in milliseconds"
                },
                "autoConnect": {
                  "type": "boolean",
                  "default": true,
                  "description": "Automatically connect to LM Studio on extension startup"
                }
              },
              "default": {
                "host": "localhost",
                "port": 1234,
                "apiKey": "",
                "timeout": 30000,
                "autoConnect": true
              },
              "description": "LM Studio connection settings"
            },
            "model": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "default": "gemma-3-4b",
                  "description": "Preferred model name (e.g., gemma-3-4b, llama-2-7b)"
                },
                "temperature": {
                  "type": "number",
                  "default": 0.7,
                  "minimum": 0,
                  "maximum": 2,
                  "description": "Model temperature for creativity vs consistency"
                },
                "maxTokens": {
                  "type": "number",
                  "default": 2048,
                  "minimum": 1,
                  "maximum": 8192,
                  "description": "Maximum tokens per response"
                },
                "contextWindow": {
                  "type": "number",
                  "default": 8192,
                  "minimum": 1024,
                  "maximum": 32768,
                  "description": "Model context window size"
                }
              },
              "default": {
                "name": "gemma-3-4b",
                "temperature": 0.7,
                "maxTokens": 2048,
                "contextWindow": 8192
              },
              "description": "Model configuration settings"
            },
            "tools": {
              "type": "object",
              "properties": {
                "enabledTools": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": [
                      "analyze",
                      "read",
                      "generate",
                      "explain",
                      "review",
                      "optimize",
                      "search",
                      "workspace"
                    ]
                  },
                  "default": [
                    "analyze",
                    "read",
                    "generate",
                    "explain",
                    "review",
                    "optimize"
                  ],
                  "description": "Enabled tool categories for AI model"
                },
                "maxConcurrentCalls": {
                  "type": "number",
                  "default": 3,
                  "minimum": 1,
                  "maximum": 10,
                  "description": "Maximum concurrent tool calls"
                },
                "toolTimeout": {
                  "type": "number",
                  "default": 15000,
                  "description": "Tool execution timeout in milliseconds"
                }
              },
              "default": {
                "enabledTools": [
                  "analyze",
                  "read",
                  "generate",
                  "explain",
                  "review",
                  "optimize"
                ],
                "maxConcurrentCalls": 3,
                "toolTimeout": 15000
              },
              "description": "Tool execution settings"
            },
            "optimization": {
              "type": "object",
              "properties": {
                "contextCompression": {
                  "type": "boolean",
                  "default": true,
                  "description": "Enable intelligent context compression for smaller models"
                },
                "smartTruncation": {
                  "type": "boolean",
                  "default": true,
                  "description": "Use smart truncation to fit context window"
                },
                "cacheResults": {
                  "type": "boolean",
                  "default": true,
                  "description": "Cache tool results to improve performance"
                }
              },
              "default": {
                "contextCompression": true,
                "smartTruncation": true,
                "cacheResults": true
              },
              "description": "Performance optimization settings"
            }
          },
          "default": {
            "enabled": true,
            "connection": {
              "host": "localhost",
              "port": 1234,
              "apiKey": "",
              "timeout": 30000
            },
            "model": {
              "name": "gemma-3-4b",
              "temperature": 0.7,
              "maxTokens": 2048,
              "contextWindow": 8192
            },
            "tools": {
              "enabledTools": [
                "analyze",
                "read",
                "generate",
                "explain",
                "review",
                "optimize"
              ],
              "maxConcurrentCalls": 3,
              "toolTimeout": 15000
            },
            "optimization": {
              "contextCompression": true,
              "smartTruncation": true,
              "cacheResults": true
            }
          },
          "description": "LM Studio integration settings for local AI models"
        },
        "ruv-swarm.tools": {
          "type": "object",
          "properties": {
            "enabledCategories": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "file-operations",
                  "code-analysis",
                  "project-navigation",
                  "swarm-management",
                  "workspace"
                ]
              },
              "default": [
                "file-operations",
                "code-analysis",
                "project-navigation",
                "swarm-management"
              ],
              "description": "Enabled tool categories"
            },
            "maxFileSize": {
              "type": "number",
              "default": 1048576,
              "description": "Maximum file size for reading (bytes)"
            },
            "maxSearchResults": {
              "type": "number",
              "default": 100,
              "description": "Maximum search results to return"
            },
            "cacheTimeout": {
              "type": "number",
              "default": 300000,
              "description": "Tool result cache timeout (milliseconds)"
            },
            "concurrentLimit": {
              "type": "number",
              "default": 5,
              "description": "Maximum concurrent tool executions"
            }
          },
          "default": {
            "enabledCategories": [
              "file-operations",
              "code-analysis",
              "project-navigation",
              "swarm-management"
            ],
            "maxFileSize": 1048576,
            "maxSearchResults": 100,
            "cacheTimeout": 300000,
            "concurrentLimit": 5
          },
          "description": "Swarm tools configuration"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ruv-swarm",
          "title": "RUV-Swarm",
          "icon": "$(lightbulb)"
        }
      ]
    },
    "views": {
      "ruv-swarm": [
        {
          "id": "ruv-swarm.chat",
          "name": "AI Chat",
          "type": "webview",
          "when": "ruv-swarm.enabled"
        },
        {
          "id": "ruv-swarm.swarmStatus",
          "name": "Swarm Status",
          "when": "ruv-swarm.enabled"
        },
        {
          "id": "ruv-swarm.activeAgents",
          "name": "Active Agents",
          "when": "ruv-swarm.enabled"
        },
        {
          "id": "ruv-swarm.recentAnalysis",
          "name": "Recent Analysis",
          "when": "ruv-swarm.enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruvnet/ruv-FANN.git",
    "directory": "vscode_extension"
  },
  "bugs": {
    "url": "https://github.com/ruvnet/ruv-FANN/issues"
  },
  "homepage": "https://github.com/ruvnet/ruv-FANN#readme",
  "license": "MIT OR Apache-2.0",
  "author": ""
}
